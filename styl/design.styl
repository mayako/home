
#list, #content-mov
  &::-webkit-scrollbar
    width: 10px
    background: transparent

  &::-webkit-scrollbar-track
    background: #F6F6F6

  &::-webkit-scrollbar-thumb
    background: #E5E5E5

body
  background: #eee

nav
  background: #191718
  color: #fff
  padding: 120px 0px 30px 0px
  overflow-y: scroll

  &::-webkit-scrollbar
    width:0px
    background:transparent

  &::-webkit-scrollbar-thumb
    background:transparent

  ul
    li
      border-left: 5px solid transparent
      color: #696969
      cursor: pointer
      font-family: "OpenSans-Regular"
      letter-spacing:  1px
      font-size: 15px
      line-height: 40px
      text-shadow: 0px 0px 1px

      &:hover
        background: #222
        color: #fff

    h4, h4 a
      color: #555
      margin: 15px 0px

  #boton
    cursor: pointer
    background: #DA3610
    border-radius: 2px
    font-family: "Trebuchet MS"
    font-size: 13px
    font-weight: bold
    letter-spacing: 1px
    padding: 7px 0px
    margin: 0px 15px 20px 15px
    text-align: center
    text-decoration: none
    text-shadow: 0px 0px 1px #fff
    text-transform: uppercase
    width: 120px
    -webkit-user-select: none

    &:hover
      background: #CB3411
    &:active
      background: #BC3111

#active
  border-left: 5px solid #DA3610
  color: #fff

#nav-top
  background: #191718
  height: 60px
  padding: 40px 0px 0px 0px
  position: fixed
  top: 0px
  z-index: 3

#main
  background: #fff
  border: 1px solid #E2E2E2

  header
    width: 300px

    h1
      color: #CDCDCD
      font-size: 60px
      padding: 10px 0px

#search-box
  background: url(../img/icon-search.png) no-repeat
  border: solid 1px #C8C8C8
  border-radius: 3px
  padding: 5px 5px 5px 35px

  input
    border-width: 0px
    color: #000
    font-size: 17px
    height: 25px
    padding: 0px 3px
    width: 240px

#compare
  background-color: #3895C8
  border: solid 1px #5EB1DE
  border-radius: 5px
  color: #fff
  cursor: pointer
  display: none
  padding: 5px 20px
  -webkit-user-select: none

  &:before
    content: 'Comparar'
    font-size:  12px
    text-transform: uppercase
  &:hover
    background-color: #338BBB
  &:active
    background-color: #307DA7

#idPhoto
  font-size: 20px
  text-shadow: 0px 0px 1px rgba(0,0,0,0.3)

#list-full
  li
    background-color:  #fff
    border-top: solid 1px #EAEAEA
    border-left: solid 5px transparent
    height: 32px
    padding: 5px 10px
    width: 95%

    &:hover
      background: #DDDDDD

.view
  background: #eee
  border-left: solid 5px #DA3610 !important

.selected
  background: #eee
  border-left: solid 5px #0080C6 !important

#list-full
  li
    img
      display: inline-block
      float: left

    > span
      display: inline-block
      padding: 5px 10px

  .num
    float: right

  .name
    margin-left: 10px
    width: 100px

  .icon-tipo
    display: inline-block
    width: 120px

  .orig
    height: 32px
    overflow: hidden
    position: absolute
    text-align: left
    width: 40%

    span a
      color: #777
      text-transform:  capitalize

.icon, .name, .num
  display: inline-block
  height: 32px
  line-height: 32px

.num
  position: absolute
  right: 0px
  width: 50px

  &:before
    content: '#'

.icon
  float: left
  width: 32px

#elementos
  li
    position: relative

    .square
      border-radius: 2px
      height: 12px
      right: 20px
      position: absolute
      top: 15px
      width: 12px

aside
  background: url(../img/trama.png)
  border-left: 1px solid #E2E2E2
  box-shadow: 0px 0px 3px rgba(0,0,0,0.5)
  overflow: hidden

  #name
    background: RGB(218,54,16)
    color: #fff
    font-family: "Electrolize"
    font-size: 40px
    line-height: 80px
    text-align: center
    text-shadow: 0px 0px 1px #fff

    a
      color: #fff


  #img
    margin: 20px 0px
    text-align: center
    width: 100%

    img
      height: 185px

  #hability
    background: #333
    border: solid 1px #000
    border-radius: 2px
    left: 10px
    position: absolute
    right: 10px
    text-align: center

    a
      color: #fff
      font-family:  "Electrolize"
      font-size: 20px
      line-height: 50px

  #content-mov
    background: #fff
    border: solid 1px #d2d2d2
    border-radius: 2px
    bottom: 70px
    left: 10px
    margin: 80px 0px
    overflow-y: scroll
    padding: 10px
    position: absolute
    right: 10px
    top: 310px

  #content-mov
    ul
      li
        font-size: 15px

  #footer
    background: RGB(218,54,16)
    bottom: 0px
    border-top: solid 50px #191718
    height: 5px
    left: 0px
    position: absolute
    right: 0px


#pk-ball
  background: #191718
  bottom: -5px
  height: 100px
  left: 40%
  position:  absolute
  width: 100px
  z-index: 99

  &, &:before, &:after
    border-radius: 100px

  &:before
    background: #ccc
    border: solid 2px #000
    bottom: 15px
    content: ''
    left: 15px
    position: absolute
    right: 15px
    top: 15px

  &:active:after
    background: #bbb

  &:after
    background: #eee
    border: solid 2px #000
    bottom: 25px
    content: ''
    left: 25px
    position: absolute
    right: 25px
    top: 25px